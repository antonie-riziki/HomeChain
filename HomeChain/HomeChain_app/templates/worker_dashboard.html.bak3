<script>
// API Configuration
const API_BASE_URL = window.location.origin + '/api';
let authToken = localStorage.getItem('access_token');

// Helper function to make API calls
async function apiCall(endpoint, options = {}) {
    const headers = {
        'Content-Type': 'application/json',
        ...options.headers
    };
    
    if (authToken) {
        headers['Authorization'] = `Bearer ${authToken}`;
    }
    
    try {
        const response = await fetch(`${API_BASE_URL}${endpoint}`, {
            ...options,
            headers
        });
        
        if (response.status === 401) {
            window.location.href = '/login';
            return null;
        }
        
        if (!response.ok) {
            throw new Error(`API error: ${response.status}`);
        }
        
        return await response.json();
    } catch (error) {
        console.error('API call failed:', error);
        return null;
    }
}

// Load dashboard data
async function loadDashboardData() {
    // Load wallet data
    const walletData = await apiCall('/payments/wallets/me/');
    if (walletData) {
        const totalEarned = walletData.total_earned || 0;
        const escrowBalance = walletData.escrow_balance || 0;
        const monthlyEarnings = walletData.monthly_earnings || 0;
        
        const totalEarnedEl = document.querySelector('.total-earned');
        const escrowEl = document.querySelector('.escrow-balance');
        const monthlyEl = document.querySelector('.monthly-earnings');
        
        if (totalEarnedEl) totalEarnedEl.textContent = `KShs ${Math.round(totalEarned * 100).toLocaleString()}`;
        if (escrowEl) escrowEl.textContent = `KShs ${Math.round(escrowBalance * 100).toLocaleString()}`;
        if (monthlyEl) monthlyEl.textContent = `+KShs ${Math.round(monthlyEarnings * 100).toLocaleString()}`;
    }
    
    // Load jobs
    const jobsData = await apiCall('/jobs/jobs/browse/');
    if (jobsData && jobsData.results) {
        const jobsContainer = document.querySelector('.jobs-container');
        if (jobsContainer && jobsData.results.length > 0) {
            jobsContainer.innerHTML = jobsData.results.slice(0, 3).map(job => `
                <div class="bg-white dark:bg-slate-800 p-4 rounded-xl shadow-sm border border-slate-100 dark:border-slate-700">
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <h4 class="font-bold text-slate-800 dark:text-white">${job.title || 'Job'}</h4>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="text-xs text-slate-500 flex items-center gap-0.5">
                                    <span class="material-icons text-[14px]">location_on</span>
                                    ${job.location || 'Location'}
                                </span>
                            </div>
                        </div>
                        <div class="text-right">
                            <p class="text-primary font-bold">KShs ${Math.round((job.budget || job.hourly_rate_min) * 100 || 0).toLocaleString()}/hr</p>
                        </div>
                    </div>
                    <div class="flex gap-2 mb-4">
                        ${(job.skills_required || []).slice(0, 2).map(skill => `
                            <span class="bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded text-[10px] text-slate-600 dark:text-slate-300">${skill}</span>
                        `).join('')}
                    </div>
                    <a href="/browse-jobs" class="w-full bg-primary text-white py-2.5 rounded-lg font-semibold text-sm hover:opacity-90 active:scale-[0.98] transition-all block text-center">
                        Apply Now
                    </a>
                </div>
            `).join('');
        }
    }
    
    // Load applications
    const applicationsData = await apiCall('/jobs/applications/');
    if (applicationsData && applicationsData.results) {
        const appsContainer = document.querySelector('.applications-container');
        if (appsContainer && applicationsData.results.length > 0) {
            appsContainer.innerHTML = applicationsData.results.slice(0, 2).map(app => `
                <div class="p-4 flex items-center justify-between border-b border-slate-50 dark:border-slate-700">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-blue-50 dark:bg-blue-900/30 flex items-center justify-center">
                            <span class="material-icons text-blue-500">assignment</span>
                        </div>
                        <div>
                            <p class="text-sm font-semibold">${app.job_title || 'Job'}</p>
                            <p class="text-[10px] text-slate-400 uppercase tracking-wider">Applied ${new Date(app.created_at).toLocaleDateString()}</p>
                        </div>
                    </div>
                    <span class="bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400 text-[10px] font-bold px-2 py-1 rounded-full">
                        ${app.status || 'PENDING'}
                    </span>
                </div>
            `).join('');
        }
    }
}

// Initialize on page load
if (authToken) {
    loadDashboardData();
} else {
    window.location.href = '/login';
}
</script>
